#:import get_color_from_hex kivy.utils.get_color_from_hex
<DetailCarScreen>:
    MDBoxLayout: 
        orientation: 'vertical'
        MDBoxLayout:
            padding: '5dp'
            adaptive_height: True
            md_bg_color: app.teal_color
            MDIconButton:
                icon: 'keyboard-backspace'
                theme_text_color: "Custom"
                text_color: app.white_color
                on_press:
                    root.changeScreen()
            MDLabel:
                text: 'THÔNG TIN XE'
                font_size: 20
                font_style: 'H6'
                theme_text_color: 'Custom'
                text_color: app.white_color
                
        MDSeparator:

        MDBoxLayout:
            ScrollView:
                bar_width: 0
                MDBoxLayout:
                    adaptive_height: True
                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True
                        spacing: 10
                        MDBoxLayout:
                            adaptive_height: True
                            padding: 25, 10, 0, 0
                            MDBoxLayout:
                                orientation: 'vertical'
                                MDLabel:
                                    text: f'{root.inform_car}'
                                    adaptive_height: True
                                    theme_text_color: 'Custom'
                                    font_style: 'Overline'
                                    font_size: 12          
                                    pading: 0, 10, 0, 0              
                                MDLabel:
                                    text: f'Giá: {root.price_car}'
                                    adaptive_height: True
                                    theme_text_color: 'Custom'
                                    font_style: 'H6'
                                    text_color: app.red_color
                            MDIconButton:
                                icon: 'heart'
                                theme_text_color: 'Custom'
                                text_color: app.black_color
                                id: heart_icon
                                on_press: root.heartIcon()
                        ScrollView:
                            size_hint_y: None
                            bar_width: 0
                            height: 130
                            MDBoxLayout:
                                adaptive_width: True
                                MDBoxLayout:
                                    size_hint_y: None
                                    adaptive_width: True
                                    spacing: 10
                                    id: list_image_car

                        MDBoxLayout:
                            orientation: 'vertical'
                            spacing: 5
                            padding: 10, 10, 10, 0
                            adaptive_height: True
                            MDBoxLayout:
                                adaptive_height: True
                                MyLeftIcon:
                                    icon: 'assets/icon/tag_icon.png'
                                MDLabel:
                                    text: f'Tình trạng xe: {root.status_car}'
                                    font_style:'Caption'
                                MyLeftIcon:
                                    icon: 'assets/icon/icon_Quang_Duong.png'
                                MDLabel:
                                    text: f'Số km đã đi: {root.km_car}'
                                    font_style:'Caption'
                            
                            MDBoxLayout:
                                adaptive_height: True
                                MyLeftIcon:
                                    icon: 'assets/icon/shift_stick_icon.png'
                                MDLabel:
                                    text: f'Hộp số: {root.shift_stick_inform_car}'
                                    font_style:'Caption'
                                MyLeftIcon:
                                    icon: 'assets/icon/calendar_icon.png'
                                MDLabel:
                                    text: f'Năm sản xuất: {root.manufacture_year_car}'
                                    font_style:'Caption' 

                            MDBoxLayout:
                                adaptive_height: True
                                MyLeftIcon:
                                    icon: 'assets/icon/icon_car.png'
                                MDLabel:
                                    text: f'Dòng Xe: {root.Dong_xe}'
                                    font_style:'Caption'
                                MyLeftIcon:
                                    icon: 'assets/icon/icon_nhien_lieeu.png'
                                MDLabel:
                                    text: f'Nhiên Liệu: {root.Nhien_Lieu}'
                                    font_style:'Caption' 
                        
                            MDBoxLayout:
                                adaptive_height: True
                                MyLeftIcon:
                                    icon: 'assets/icon/Nguoi_Ban.png'
                                MDLabel:
                                    text: f'Người Bán: {root.Nguoi_Ban}'
                                    font_style:'Caption'
                                MyLeftIcon:
                                    icon: 'assets/icon/icon_Dong_co.png'
                                MDLabel:
                                    text: f'Dẫn Động: {root.Dan_dong}'
                                    font_style:'Caption'

                            MDBoxLayout:
                                adaptive_height: True
                                MyLeftIcon:
                                    icon: 'assets/icon/icon_Mau_xe.png'
                                MDLabel:
                                    text: f'Màu Xe: {root.Mau_Xe}'
                                    font_style:'Caption'
                                MyLeftIcon:
                                    icon: 'assets/icon/icon_vi_tri.png'
                                MDLabel:
                                    text: f'Xuất Xứ: {root.Xuat_Xu}'
                                    font_style:'Caption'

                        MDBoxLayout:
                            orientation: 'horizontal'
                            padding: 15, 0, 0, 0
                            adaptive_height: True

                            MDIconButton:
                                icon: 'assets/icon/location_icon.png'
                                pos_hint: {'y': 0.2}
                                padding_right: 10
                                user_font_size: "0.5sp"

                            MDLabel:
                                text: f'  {root.place} ~ Ngày đăng: {root.day}'
                                font_style: 'Overline'
                                theme_text_color: 'Custom'
                                text_color: get_color_from_hex('#0000ff')
                                font_size: 11
                        
                        MDBoxLayout:
                            adaptive_height: True
                            padding: 15, 5, 20, 0
                            MDLabel: 
                                text: f'{root.Mo_Ta}'
                                adaptive_height: True