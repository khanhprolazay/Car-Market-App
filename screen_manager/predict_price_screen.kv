#:import Factory kivy.factory.Factory
<PredictPriceScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        ScrollView:
            bar_width: 0
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                spacing: 20
                MDBoxLayout:
                    padding: '5dp'
                    adaptive_height: True
                    md_bg_color: get_color_from_hex("#20B2AA")
                    MDIconButton:
                        icon: 'keyboard-backspace'
                        theme_text_color: "Custom"
                        text_color: get_color_from_hex("#FFFFFF")
                        on_press:
                            root.manager.transition.direction = 'right' 
                            root.manager.current = 'listcarscreen'
                            root.reset()
                    MDLabel:
                        text: 'ĐỊNH GIÁ XE'
                        font_size: 20
                        theme_text_color: 'Custom'
                        font_style: 'H6'
                        text_color: get_color_from_hex('#FFFFFF')

                MDBoxLayout:
                    adaptive_height: True
                    padding: 0, 0, 0, 10
                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True
                        spacing: 5
                        padding: 20, 0, 0, 0
                        MDLabel:
                            text: 'Hãng xe'
                            theme_text_color: 'Custom'
                            font_style: 'H6'
                            adaptive_height: True
                        MyTextField:
                            id: logo_field
                            hint_text: 'Chưa chọn'
                            disabled: True
                            on_press: 
                                root.currenBox = 'Hãng xe'
                                root.toSelectScreen()

                MDBoxLayout:
                    adaptive_height: True
                    padding: 0, 0, 0, 10
                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True
                        spacing: 5
                        padding: 20, 0, 0, 0
                        MDLabel:
                            text: 'Kiểu xe'
                            theme_text_color: 'Custom'
                            font_style: 'H6'
                            adaptive_height: True
                        MyTextField:
                            id: type_field
                            hint_text: 'Kiểu xe'
                            disabled: True
                            on_press: 
                                root.currenBox = 'Kiểu xe'
                                root.toSelectScreen()
                    
                MDBoxLayout:
                    adaptive_height: True
                    padding: 0, 0, 0, 10
                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True
                        padding: 20, 0, 0, 0
                        spacing: 5
                        MDLabel:
                            text: 'Nhiên liệu'
                            theme_text_color: 'Custom'
                            font_style: 'H6'
                            adaptive_height: True
                            pos: (1, 0.5)
                        MDBoxLayout:
                            spacing: 5
                            padding: -20, 0, 0, 0
                            adaptive_height: True
                            id: fuel
                            Button:
                                text: 'Xăng'
                                size_hint_y: None
                                height: 50
                                color: get_color_from_hex('#000000')
                                background_normal: ''
                                background_color: get_color_from_hex('#DCDCDC')
                                on_press:
                                    root.fuel = 'Xăng'
                                    root.changeFuelColor()
                            Button:
                                text: 'Dầu'
                                color: get_color_from_hex('#000000')
                                background_normal: ''
                                background_color: get_color_from_hex('#DCDCDC')
                                on_press:
                                    root.fuel = 'Dầu'
                                    root.changeFuelColor()
                            Button:
                                text: 'Điện'
                                color: get_color_from_hex('#000000')
                                background_normal: ''
                                background_color: get_color_from_hex('#DCDCDC')
                                on_press:
                                    root.fuel = 'Điện'
                                    root.changeFuelColor()

                MDBoxLayout:
                    adaptive_height: True
                    padding: 0, 0, 0, 10
                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True
                        padding: 20, 0, 0, 0
                        spacing: 5
                        id: shift_stick
                        MDLabel:
                            text: 'Hộp số'
                            theme_text_color: 'Custom'
                            font_style: 'H6'
                            adaptive_height: True
                            pos: (1, 0.5)
                        MDBoxLayout:
                            spacing: 5
                            padding: -20, 0, 0, 0
                            adaptive_height: True
                            id: shift_stick
                            Button:
                                text: 'Số sàn'
                                size_hint_y: None
                                height: 50
                                color: get_color_from_hex('#000000')
                                background_normal: ''
                                background_color: get_color_from_hex('#DCDCDC')
                                on_press:
                                    root.shift_stick = 'Số sàn'
                                    root.changeShiftStickColor()
                            Button:
                                text: 'Tự động'
                                color: get_color_from_hex('#000000')
                                background_normal: ''
                                background_color: get_color_from_hex('#DCDCDC')
                                on_press:
                                    root.shift_stick = 'Tự động'
                                    root.changeShiftStickColor()
                            Button:
                                text: 'Bán tự động'
                                color: get_color_from_hex('#000000')
                                background_normal: ''
                                background_color: get_color_from_hex('#DCDCDC')
                                on_press:
                                    root.shift_stick = 'Bán tự động'
                                    root.changeShiftStickColor()

                MDBoxLayout:
                    adaptive_height: True
                    padding: 0, 0, 0, 10
                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True
                        spacing: 5
                        padding: 20, 0, 0, 0
                        MDLabel:
                            text: 'Năm sản xuất'
                            theme_text_color: 'Custom'
                            font_style: 'H6'
                            adaptive_height: True
                        MDTextFieldRound:
                            id: manufacture_year
                            hint_text: 'Chưa chọn'
                            size_hint_x: None
                            size_hint_y: None
                            width: 270
                            height: 200
                            icon_right: 'magnify'
                            normal_color: get_color_from_hex('#FFFFFF')

                MDBoxLayout:
                    adaptive_height: True
                    padding: 0, 0, 0, 10
                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True
                        spacing: 5
                        padding: 20, 0, 0, 0
                        MDLabel:
                            text: 'Số chỗ ngồi'
                            theme_text_color: 'Custom'
                            font_style: 'H6'
                            adaptive_height: True
                        MDTextFieldRound:
                            id: seat
                            hint_text: 'Chưa chọn'
                            size_hint_x: None
                            size_hint_y: None
                            width: 270
                            height: 200
                            icon_right: 'magnify'
                            normal_color: get_color_from_hex('#FFFFFF')

                MDBoxLayout:
                    adaptive_height: True
                    padding: 0, 0, 0, 10
                    MDBoxLayout:
                        orientation: 'vertical'
                        adaptive_height: True
                        spacing: 5
                        padding: 20, 0, 0, 0
                        MDLabel:
                            text: 'Số km đã đi'
                            theme_text_color: 'Custom'
                            font_style: 'H6'
                            adaptive_height: True
                        MDTextFieldRound:
                            id: km
                            hint_text: 'Chưa chọn'
                            size_hint_x: None
                            size_hint_y: None
                            width: 270
                            height: 200
                            icon_right: 'magnify'
                            normal_color: get_color_from_hex('#FFFFFF')

                MDBoxLayout:
                    adaptive_height: True
                    MDBoxLayout:
                        adaptive_height: True       
                        padding: 95, 0, 0, 0                 
                        MDRoundFlatButton:
                            text: "Định giá"
                            font_size: 20
                            font_style: 'H5'
                            on_press: root.openPredictDialog()

<MyTextField@ButtonBehavior+MDTextFieldRound>:
    size_hint_x: None
    size_hint_y: None
    width: 270
    height: 200
    icon_right: 'magnify'
    normal_color: get_color_from_hex('#FFFFFF')