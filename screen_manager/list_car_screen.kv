#:import get_color_from_hex kivy.utils.get_color_from_hex

<ListCarScreen>: #<Cusomer>
    md_bg_color: get_color_from_hex('#000000')

    MDBoxLayout:
        orientation: 'vertical'
        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                spacing: 20
                divider: None
                id: listitem
        MDBoxLayout:
            adaptive_height: True
            spacing: 10
            padding: 95, 0, 0, 0
            md_bg_color: get_color_from_hex("#FFFFFF")
            
            MDIconButton:
                icon: 'arrow-left-circle'
                user_font_size: "25sp"
                on_release:
                    root.leftArrowIcon()
            MDIconButton:
                icon: 'arrow-right-circle'
                user_font_size: "25sp"
                on_release:
                    root.rightArrowIcon()
            MDCard:
                size_hint: None, None
                size: 35, 35
                radius: [25, 25]
                pos_hint: {"center_x": 0.5,"center_y": 0.5}
                ripple_behavior: True
                focus_behavior: True
                on_release: root.toProfileForm()
                FitImage:
                    source: "assets/profile_picture.png"
                    size: 35, 35
                    radius: [25, 25]



