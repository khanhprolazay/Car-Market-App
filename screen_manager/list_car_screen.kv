#:import get_color_from_hex kivy.utils.get_color_from_hex
<ListCarScreen>: 
    md_bg_color: app.black_color

    MDBoxLayout:
        id: box
        orientation: 'vertical'
        ScrollView:
            size_hint_y: None
            bar_width: 0
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_width: True
                MDBoxLayout:
                    adaptive_width: True
                    size_hint_y: None
                    spacing: 25
                    md_bg_color: app.teal_color
                    id: listlogo

        RecycleView:
            id: listitem
            viewclass: "CarCard"
            bar_width: 0
            RecycleBoxLayout:
                size_hint_y: None
                height: self.minimum_height
                default_size: None, 350
                default_size_hint: 1, None
                orientation: 'vertical'
                spacing: 30

        MDBoxLayout:
            adaptive_height: True
            spacing: 12
            padding: 2, 0, 0, 0
            md_bg_color: app.white_color
            MDIconButton:
                icon: 'car'
                on_release:
                    root.manager.transition.direction = 'left' 
                    root.manager.current = 'predictpricescreen'
            MDIconButton:
                icon: 'arrow-left-circle'
                on_release:
                    root.leftArrowIcon()
            MDIconButton:
                icon: 'home'
                on_release:
                    root.homeIcon()
            MDIconButton:
                icon: 'arrow-right-circle'
                on_release:
                    root.rightArrowIcon()
            MDCard:
                size_hint: None, None
                size: 35, 35
                radius: [25, 25]
                pos_hint: {"center_x": 0.5,"center_y": 0.5}
                ripple_behavior: True
                focus_behavior: True
                on_release: root.toProfileForm()
                FitImage:
                    id: image
                    source: app.image
                    size: 30, 30
                    radius: [25, 25]
                    
<Recycleviewlist>:
    id: root.id
    viewclass: "CarCard"
    bar_width: 0
    RecycleBoxLayout:
        size_hint_y: None
        height: self.minimum_height
        default_size: None, 350
        default_size_hint: 1, None
        orientation: 'vertical'
        spacing: 30

