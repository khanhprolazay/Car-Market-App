#:import get_color_from_hex kivy.utils.get_color_from_hex
<ProfileScreen>:
    #md_bg_color: get_color_from_hex('#FFFFFF')
    MDBoxLayout:
        orientation: 'vertical'

        MDBoxLayout:
            size_hint: None, None
            size: 300, 80

            CircularAvatarImage: 
                avatar: root.profile_picture
                adaptive_height: True
                pos_hint: {"top":0.9}

            MDBoxLayout: 
                orientation: 'vertical'
                padding: 35, 0, 0, 15  #left, top, right, bottom
                MDLabel:
                    text: "LÃª Minh"
                    font_style: "H5"
                    adaptive_height: True
                MDLabel:
                    text: "khanhprolazay@gmail.com"
                    font_style: "H5"
                    font_size: 10
                    adaptive_height: True

        MDBoxLayout:
            padding: 5, 0, 0, 0
            spacing: 2
            adaptive_height: True
            MDIconButton:
                icon: "heart-outline"                  
            MDIconButton:
                icon: "history"
            MDIconButton:
                icon: "arrow-left-bold-outline"
                on_release: 
                    root.toFormListCar()
            
            Widget:

            MDIconButton:
                icon: 'logout'
                on_release:
                    root.manager.transition.direction = "right"
                    root.manager.current = 'login'


        MDBoxLayout:
            md_bg_color: get_color_from_hex('#000000')
            ScrollView:
                MDBoxLayout:
                    orientation: 'vertical'
                    adaptive_height: True
                    spacing: 20
                    divider: None
                    id: listitem
