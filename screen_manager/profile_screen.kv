#:import get_color_from_hex kivy.utils.get_color_from_hex
<ProfileScreen>:
    MDBoxLayout:
        md_bg_color: app.black_color
        orientation: 'vertical'

        MDBoxLayout:
            id: box
            orientation: 'vertical'
            adaptive_height: True

        RecycleView:
            id: listitem
            viewclass: "CarCard"
            bar_width: 0
            RecycleBoxLayout:
                size_hint_y: None
                height: self.minimum_height
                default_size: None, 350
                default_size_hint: 1, None
                orientation: 'vertical'
                spacing: 30
                    
