<SelectScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: dp(10)
        padding: dp(20)

        BoxLayout:
            size_hint_y: None
            height: self.minimum_height
            MDIconButton:
                icon: 'magnify'
            MDTextField:
                id: search_field
                hint_text: root.text
                on_text: root.searchText(self.text)

        RecycleView:
            id: recycle_view
            key_viewclass: 'viewclass'
            key_size: 'height'
            bar_width: 0
            RecycleBoxLayout:
                padding: dp(10)
                default_size: None, dp(48)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'

<CustomListItem>:
    on_press: root.toPredictScreen(self.text)
    ImageLeftWidget:
        source: root.image