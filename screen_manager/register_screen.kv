<RegisterScreen>:
    fullname: fullname
    email: email
    password: password
    confPass: confPass
    MDFloatLayout:
        MDLabel:
            text: "Register Form"
            pos_hint: {"center_y": .95}
            font_style: "H3"
            halign: "center"
            # theme_text_color: "Custom"
            text_color: 1,0,0,1
        MDTextField:
            id: fullname
            hint_text: "Enter your full name: "
            pos_hint: {"center_x": .5,"center_y": .8}
            size_hint_x: .8
        MDTextField:
            id: email
            hint_text: "Enter your email: "
            pos_hint: {"center_x": .5,"center_y": .7}
            size_hint_x: .8
        MDTextField:
            id: password
            hint_text: "Enter your password: "
            pos_hint: {"center_x": .5,"center_y": .6}
            size_hint_x: .8
            password: True
        MDTextField:
            id: confPass
            hint_text: "Confirm password: "
            pos_hint: {"center_x": .5,"center_y": .5}
            size_hint_x: .8
            password: True
        MDRoundFlatButton:
            text: "Submit"
            font_style: "H4"
            font_size: 14
            size_hint: None, None
            pos_hint: {"center_x": .5,"top": .4}
            on_release:
                root.manager.transition.direction = 'right' 
                root.Register()
        MDRoundFlatButton:
            text: "  Back  "
            font_style: "H4"
            font_size: 14
            size_hint: None, None
            pos_hint: {"center_x": .5,"top": .28}
            on_release:
                root.clearAll()
                root.manager.transition.direction = 'right' 
                root.manager.current = 'login'
        