#:import get_color_from_hex kivy.utils.get_color_from_hex
<CarCard>:
    orientation: 'vertical'
    size_hint_y: None
    height: '350dp'
    radius: [36, ]
    divider: None
    spacing: -10
    md_bg_color: get_color_from_hex('#FFFFFF')
    ripple_behavior: True
    focus_behavior: True
    on_release:
        root.toFormDetailProduct()
    
    FitImage:
        source: root.car_image
        size_hint_y: None
        height: 200
        pos_hint: {"top": 1}
        radius: 36, 36, 0, 0 
        adaptive_height: True

    TwoLineListItem:
        text: root.inform_car
        theme_text_color: 'Custom'
        font_style: 'Overline'
        secondary_text: root.price_car
        secondary_theme_text_color: 'Custom'
        secondary_font_style: 'H6'
        secondary_text_color: get_color_from_hex('#EB144C')
        divider: None
        _no_ripple_effect: True
        size_hint_y: None
        adaptive_width: True
        _txt_left_pad: 30

    MDBoxLayout:
        orientation: 'vertical'
        spacing: 10
        adaptive_height: True
        MDBoxLayout:
            orientation: 'horizontal'
            padding: 30, 0, 0, 0 # [padding_left, padding_top, padding_right, padding_bottom]
            adaptive_height: True
            MyLeftIcon:
                icon: 'assets/tag_icon.png'
            MyLabel:
                text: f'Tình trạng xe: {root.status_car}'

            MyLeftIcon:
                icon: 'assets/calendar_icon.png'
            MyLabel:
                text: f'Năm sản xuất: {root.manufacture_year_car}'

            
        MDBoxLayout:
            orientation: 'horizontal'
            padding: 30, 0, 0, 0
            adaptive_height: True

            MyLeftIcon:
                icon: 'assets/street_icon.png'
            MyLabel:
                text: f'Số km đã đi: {root.km_car}'

            MyLeftIcon:
                icon: 'assets/shift_stick_icon.png'
            MyLabel:
                text: f'Hộp số: {root.shift_stick_inform_car}'
    MDBoxLayout:
        orientation: 'horizontal'
        padding: 30, 10, 0, 0

        MDIconButton:
            icon: 'assets/location_icon.png'
            pos_hint: {'y': 0.2}
            padding_right: 10
            user_font_size: "0.5sp"

        MDLabel:
            text: f'  {root.place} ~ Ngày đăng: {root.day}'
            font_style: 'Overline'
            theme_text_color: 'Custom'
            text_color: get_color_from_hex('#0000ff')
            font_size: 11
                

<MyBoxLayout@MDBoxLayout>:
    adaptive_height: True
    orientation: 'vertical'

<MyLeftIcon@MDIconButton>
    user_font_size: "1sp"

<MyLabel@MDLabel>
    adaptive_width: True
    font_size: 11
    theme_text_color: 'Custom'